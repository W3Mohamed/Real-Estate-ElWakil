{% extends 'base.html.twig' %}

{% block title %}Contact - GROUPIMMO{% endblock %}

{% block body %}

    <!-- Hero Section Contact -->
    <section class="relative h-[70vh] min-h-[500px] overflow-hidden">
        <!-- Container de l'image avec masque -->
        <div class="absolute inset-0">
            <img src="https://images.unsplash.com/photo-1605276374104-dee2a0ed3cd6?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" 
                alt="Agence immobilière GROUPIMMO" 
                class="w-full h-full object-cover object-center">
            <div class="absolute inset-0 bg-[#004165] opacity-70"></div>
        </div>
        
        <!-- Contenu texte -->
        <div class="relative h-full flex flex-col justify-center px-6">
            <div class="container mx-auto text-center text-white">
                <h1 class="text-4xl md:text-5xl font-bold mb-6 leading-tight">
                    Contactez <span class="text-[#fddb36]">GROUPIMMO</span>
                </h1>
                <p class="text-xl md:text-2xl mb-8 max-w-2xl mx-auto">
                    Notre équipe est à votre disposition pour répondre à toutes vos questions immobilières
                </p>
                
                <!-- Bouton CTA optionnel -->
                <a href="#contact-form" class="inline-block bg-[#fddb36] text-[#004165] font-bold py-3 px-8 rounded-lg hover:bg-yellow-400 transition duration-300 transform hover:-translate-y-1 shadow-lg">
                    Nous contacter
                </a>
            </div>
        </div>
        
        <!-- Vague décorative comme dans le deuxième exemple -->
        <div class="absolute bottom-0 left-0 right-0 z-20">
            <svg viewBox="0 0 1200 120" preserveAspectRatio="none" class="w-full h-24 md:h-32">
